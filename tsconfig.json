{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist/js",
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "dist/js/tsconfig.tsbuildinfo",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
